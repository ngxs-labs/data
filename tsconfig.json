{
    "compileOnSave": false,
    "angularCompilerOptions": {
        "disableTypeScriptVersionCheck": true
    },
    "compilerOptions": {
        "baseUrl": "./",
        "strict": true,
        "strictPropertyInitialization": false,
        "strictFunctionTypes": true,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "lib": ["es2017", "dom"],
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@ngxs-labs/data": ["src/public-api.ts"],
            "@ngxs-labs/data/utils": ["src/utils/public-api.ts"],
            "@ngxs-labs/data/internals": ["src/internals/public-api.ts"],
            "@ngxs-labs/data/decorators": ["src/decorators/public-api.ts"],
            "@ngxs-labs/data/common": ["src/common/public-api.ts"]
        }
    },
    "exclude": ["dtslint"]
}
