{
    "$schema": "../node_modules/ng-packagr/package.schema.json",
    "name": "@ngxs-labs/data",
    "version": "3.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ngxs-labs/data.git"
    },
    "keywords": [
        "ngxs",
        "state",
        "rxjs",
        "angular",
        "cqrs",
        "store",
        "state-management",
        "event-stream",
        "data-plugin"
    ],
    "bugs": {
        "url": "https://github.com/ngxs-labs/data/issues"
    },
    "homepage": "https://github.com/ngxs-labs/data#readme",
    "peerDependencies": {
        "@ngxs/store": ">=3.6.0 <4.0.0",
        "typescript": ">=3.8.2"
    },
    "ngPackage": {
        "lib": {
            "entryFile": "public-api.ts",
            "umdModuleIds": {
                "@ngxs/store": "ngxs-store",
                "@ngxs-labs/data/utils": "ngxs-labs-data-utils",
                "@ngxs/store/internals": "ngxs-store-internals"
            }
        },
        "dest": "../dist/ngxs-data"
    }
}
