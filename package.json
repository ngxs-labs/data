{
    "name": "ngxs-data",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build:app": "ng build --prod",
        "build:lib": "ts-node --project tools/tsconfig.tools.json tools/build && ts-node --project tools/tsconfig.tools.json tools/copy-readme",
        "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
        "deploy": "ng deploy --no-build --repo=https://github.com/ngxs-labs/data.git",
        "format": "npx sort-package-json && prettier --write \"**/*.{js,ts,html,css,scss,md,json,yml}\"",
        "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install, not NPM')\"",
        "lint": "eslint \"**/*.ts\"",
        "start": "ng serve --open --port 4400",
        "test": "jest --config ./jest.config.js",
        "test:ci": "jest --config ./jest.config.js --coverage",
        "test:types": "dtslint ./dtslint --localTs node_modules/typescript/lib"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "0.803.25",
        "@angular-devkit/build-ng-packagr": "0.900.3",
        "@angular/animations": "8.2.14",
        "@angular/cli": "8.3.25",
        "@angular/common": "8.2.14",
        "@angular/compiler": "8.2.14",
        "@angular/compiler-cli": "8.2.14",
        "@angular/core": "8.2.14",
        "@angular/forms": "8.2.14",
        "@angular/language-service": "8.2.14",
        "@angular/platform-browser": "8.2.14",
        "@angular/platform-browser-dynamic": "8.2.14",
        "@angular/router": "8.2.14",
        "@ngxs/logger-plugin": "3.6.2",
        "@ngxs/store": "3.6.2",
        "@types/jest": "25.1.3",
        "@types/node": "13.7.5",
        "@typescript-eslint/eslint-plugin": "2.21.0",
        "@typescript-eslint/eslint-plugin-tslint": "2.21.0",
        "@typescript-eslint/parser": "2.21.0",
        "angular-cli-ghpages": "0.6.2",
        "core-js": "3.6.4",
        "coveralls": "3.0.9",
        "dtslint": "0.9.9",
        "eslint": "6.8.0",
        "eslint-plugin-import": "2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-simple-import-sort": "5.0.1",
        "jest": "25.1.0",
        "jest-preset-angular": "8.0.0",
        "ng-packagr": "9.0.1",
        "npx": "10.2.2",
        "prettier": "1.19.1",
        "rxjs": "6.5.4",
        "sort-package-json": "1.40.0",
        "ts-node": "8.6.2",
        "tsickle": "0.38.0",
        "tslib": "1.11.0",
        "tslint": "6.0.0",
        "typescript": "3.7.2",
        "zone.js": "0.10.2"
    }
}
