{
    "rangeStrategy": "bump",
    "separateMajorMinor": false,
    "timezone": "UTC",
    "automerge": true,
    "schedule": ["after 10pm every weekday", "before 4am every weekday", "every weekend"],
    "baseBranches": ["master"],
    "ignoreDeps": ["typescript", "tsickle"],
    "packageFiles": ["package.json"],
    "major": {
        "devDependencies": {
            "enabled": false
        }
    },
    "packageRules": [
        {
            "packagePatterns": ["^@angular/.*"],
            "groupName": "@angular"
        },
        {
            "packageNames": ["^@ngxs.*"],
            "groupName": "@ngxs"
        },
        {
            "packageNames": ["^@types/.*"],
            "groupName": "@types"
        }
    ]
}
